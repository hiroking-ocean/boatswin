<div id="WaveImageControll" class="carousel slide wave" data-ride="carousel" data-interval='false'>

  <div class="carousel-inner">
    <% @names.wave.each_with_index do |name, i| %>
    <div class="carousel-item <%= add_class(i) %>" carousel-number="<%= @names.wave[i] %>" id="<%= i %>">
      <%= image_tag("waves/" + name + ".jpg") %>
    </div>
    <%end%>
  </div>

  <a class="carousel-control-prev wave-button" href="#WaveImageControll" role="button" data-slide="prev" data-targets="wave">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next wave-button" href="#WaveImageControll" role="button" data-slide="next" data-targets="wave">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>